<Window x:Class="WpfApp1.AngleTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.AngleUITest"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="AngleTest" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
  
        Background="Black">
    <Canvas>
        <ComboBox x:Name="SerialComboBox"
               HorizontalAlignment="Left" 
               AllowDrop="False" 
               Width="560" 
               Height="28"
               RenderTransformOrigin="0.5,0.5" 
               Canvas.Left="28" 
               Canvas.Top="29" VerticalAlignment="Top" 
              />
        <Button x:Name="SerialConnectButton" 
             HorizontalAlignment="Left"
             Content="Connect"
             Width="100"
             Height="40"
             Click="SerialConnectButton_Click" Canvas.Left="670" Canvas.Top="20" VerticalAlignment="Center"/>
        <local:CircularProgressBar x:Name="progressBar"
                                   Canvas.Left="422"
                                   Canvas.Top="131"
                                   StrokeThickness="20"
                                   Radius="120"
                                   TextSize="50"
                                   TextColor="red"
                                   ArcSegmentColor="red"
                                   StrokeDashPattern="" 
                                   />
        <TextBlock x:Name="TitleNameTextBlock"
                   Canvas.Left="477" 
                   TextWrapping="Wrap" 
                   Text="Please turn to: 30" 
                   Foreground="White"
                   FontSize="20"
                   
                   Canvas.Top="98" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Width="190" 
                   Height="28"/>
        <Button x:Name="ConfirmButton"
            Content="Confirm"
            Width="100"
            Height="40"
            Click="ConfirmButton_Click" Canvas.Left="121" Canvas.Top="300" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock x:Name="NameTextBlock"
            Canvas.Left="28" 
            TextWrapping="Wrap" 
            Text="Name:" 
            Foreground="White"
            FontSize="20"
            Canvas.Top="117" 
            Width="73" 
            Height="28" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox Canvas.Left="101" 
                 x:Name="NameTextBox"
                 FontSize="20"
                 TextWrapping="Wrap" 
                 Text="" 
                 Canvas.Top="117" 
                 Width="120" 
                 HorizontalAlignment="Center" 
                 Height="28" 
                 VerticalAlignment="Center"/>
        <TextBlock x:Name="SexTextBlock"
            Canvas.Left="28" 
            TextWrapping="Wrap" 
            Text="Sex:" 
            Foreground="White"
            FontSize="20"
            Canvas.Top="176" 
            Width="73" 
            Height="28" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:Name="AgeTextBlock"
            Canvas.Left="28" 
            TextWrapping="Wrap" 
            Text="Age:" 
            Foreground="White"
            FontSize="20"
                   
            Canvas.Top="234" 
            Width="73" 
            Height="28" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Canvas.Left="101" 
            x:Name="SexTextBox"
            FontSize="20"
            TextWrapping="Wrap" 
            Text="" 
            Canvas.Top="176" 
            Width="120" 
            Height="28" 
            HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Canvas.Left="101" 
            x:Name="AgeTextBox"
            FontSize="20"
            TextWrapping="Wrap" 
            Text="" 
            Canvas.Top="234" 
            Width="120" 
            Height="28" 
            HorizontalAlignment="Center"
            VerticalAlignment="Top"/>

    </Canvas>


</Window>
